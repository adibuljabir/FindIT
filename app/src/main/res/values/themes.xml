git <?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Use Light theme as parent to force light mode -->
    <style name="Theme.FindIT" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/on_secondary</item>
        
        <!-- Status bar color. Use a light gray to distinguish from app content, but keep icons visible. -->
        <item name="android:statusBarColor">@color/light_gray</item>
        <!-- Set to true so notification icons (time, battery) are black/dark -->
        <item name="android:windowLightStatusBar">true</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        
        <!-- Customize FloatingActionButton color -->
        <item name="floatingActionButtonStyle">@style/Widget.App.FloatingActionButton</item>
        
        <!-- Customize RadioButton color -->
        <item name="radioButtonStyle">@style/Widget.App.RadioButton</item>
    </style>

    <style name="Widget.App.FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/primary</item>
        <item name="tint">@color/on_primary</item>
    </style>

    <style name="Widget.App.RadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="buttonTint">@color/primary</item>
    </style>
</resources>
